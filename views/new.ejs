<% include partials/header %>

<div class="ui main text container segment form-blog">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image URL" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea type="text" name="blog[body]" placeholder="Blog post content" required></textarea>
        </div>
        <input class="ui big inverted violet button" type="submit">
    </form>
</div>

<% include partials/footer %>